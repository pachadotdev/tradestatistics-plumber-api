[Unit]
Description=Open Trade Statistics API

[Service]
ExecStart=/usr/bin/Rscript -e "api <- plumber::plumb('/tradestatistics/plumber-api/queries.R'); api$run(port=8080, host='0.0.0.0', swagger=TRUE)"
Restart=on-abnormal
WorkingDirectory=/tradestatistics/plumber-api

[Install]
WantedBy=multi-user.target
